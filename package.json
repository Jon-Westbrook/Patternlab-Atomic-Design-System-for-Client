{
  "name": "3095-001-03-cardx-design-system",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "pl:build": "patternlab build --config ./patternlab-config.json",
    "pl:help": "patternlab --help",
    "pl:install": "patternlab install --config ./patternlab-config.json",
    "pl:serve": "patternlab serve --config ./patternlab-config.json",
    "pl:version": "patternlab --version",
    "clean": "rimraf public/",
    "scss": "node-sass --output-style compressed --source-map true -o public/css source/scss/style.scss",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '&gt; 1%, last 2 versions' -r public/css/*",
    "lint": "eslint source/js",
    "build:css": "npm run scss",
    "imagemin": "imagemin source/images/**/* --out-dir=public/images",
    "upgrade": "npm-check --update",
    "watch:css": "watch 'npm run build:css' source/scss -d -u",
    "watch:js": "watch 'npm run pl:build' source/js",
    "watch:ui-kit": "watch 'npm run pl:build' source/uikit-workshop/dist",
    "watch:patterns": "watch 'npm run pl:build' source/_patterns",
    "watch": "npm run watch:patterns & npm run watch:css & npm run watch:js & npm run watch:ui-kit",
    "serve": "browser-sync start --server 'public' --no-notify --files 'public/patterns/**/*, public/css/*.css, public/js/*.js'",
    "prebuild": "npm run clean",
    "build": "npm run build:css & npm run pl:build",
    "postbuild": "npm run serve & npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/vsapartners/3095-001-03-cardx-design-system.git"
  },
  "license": "ISC",
  "homepage": "https://bitbucket.org/vsapartners/3095-001-03-cardx-design-system#readme",
  "dependencies": {
    "@pattern-lab/cli": "^0.0.1-beta.1",
    "@pattern-lab/core": "^3.0.0-beta.1",
    "@pattern-lab/engine-mustache": "^2.0.0-beta.0",
    "@pattern-lab/uikit-workshop": "^1.0.0-beta.0",
    "starterkit-mustache-bootstrap": "github:pattern-lab/starterkit-mustache-bootstrap",
    "bootstrap": "^4.1.3",
    "auth-static": "^1.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "browser-sync": "^2.26.3",
    "eslint": "^5.9.0",
    "imagemin-cli": "^4.0.0",
    "node-sass": "^4.10.0",
    "npm-check": "^5.9.0",
    "postcss-cli": "^6.0.1",
    "rimraf": "^2.6.2",
    "watch": "^1.0.2"
  }
}
