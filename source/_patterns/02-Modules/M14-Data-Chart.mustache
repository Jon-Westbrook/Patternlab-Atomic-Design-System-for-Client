<div class="container home-module week pl-lg-0 mt-7">
  <div class="line my-0"></div>
  <div class="row h-100 data-chart">
    <div class="col-md-4">
      <div class="col-f-1 mt-7 ml-md-7 display6 bold secondary-1">DEPOSITS</div>
      <div class="col-f-1 ml-md-7">
        <div class="display7 bold mt-8">LAST DEPOSIT</div>
        <div class="display1 secondary-4 mt-6">{{ home.last-deposit }}</div>
        <div class="display6 mt-6">Wednesday, Dec 12 at 2:35pm</div>
      </div>
      <div class="col-f-1">
        <button type="button" class="mt-7 mb-9 mx-7 btn btn-outline w-sm-100">VIEW DEPOSITS</button>
      </div>
    </div>
    <div class="col-md-8 d-flex flex-column align-items-end">
      <div class="col-f-1 tab-content w-100 pt-5" id="pills-tabContent" style="height:230px;">
        <div class="tab-pane fade show active" id="pills-week" role="tabpanel" aria-labelledby="pills-week-tab">
          <div class="ct-chart ct-week" id="ct-week" style="height:200px"></div>
        </div>
        <div class="tab-pane fade" id="pills-month" role="tabpanel" aria-labelledby="pills-month-tab">
          <div class="ct-chart ct-month" id="ct-month" style="height:200px"></div>
        </div>
        <div class="tab-pane fade" id="pills-quarter" role="tabpanel" aria-labelledby="pills-quarter-tab">
          <div class="ct-chart ct-quarter" id="ct-quarter" style="height:200px"></div>
        </div>
        <div class="tab-pane fade" id="pills-year" role="tabpanel" aria-labelledby="pills-year-tab">
          <div class="ct-chart ct-year" id="ct-year" style="height:200px"></div>
        </div>
      </div>
      <ul class="col-f-1 nav nav-pills mb-3 w-100 justify-content-center" id="pills-tab" role="tablist" style="flex:1">
        <li class="nav-item">
          <a class="nav-link data-chart-nav active" id="pills-week-tab" data-toggle="pill" href="#pills-week" role="tab" aria-controls="pills-week" aria-selected="true">WEEK</a>
        </li>
        <li class="nav-item">
          <a class="nav-link data-chart-nav" id="pills-month-tab" data-toggle="pill" href="#pills-month" role="tab" aria-controls="pills-month" aria-selected="false">MONTH</a>
        </li>
        <li class="nav-item">
          <a class="nav-link data-chart-nav" id="pills-quarter-tab" data-toggle="pill" href="#pills-quarter" role="tab" aria-controls="pills-quarter" aria-selected="false">QUARTER</a>
        </li>
        <li class="nav-item">
          <a class="nav-link data-chart-nav" id="pills-year-tab" data-toggle="pill" href="#pills-year" role="tab" aria-controls="pills-year" aria-selected="false">YEAR</a>
        </li>
      </ul>
    </div>
  </div>
</div>
