<div class="modal fade" id="{{ id }}" tabindex="-1" role="dialog" aria-labelledby="New Customer" aria-hidden="false">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">

      <div class="modal-header py-0">
        <div class="container">
          <div class="row mt-8">
            <div class="col-md-12 d-flex flex-column flex-md-row px-0">
              <h1 class="primary-3">{{ heading-page }}</h1>
              <div class="ml-auto">
                {{# btn-cancel }}
                  <button type="button" class="btn btn-dark-outline" data-dismiss="modal" aria-label="cancel">{{ btn-cancel }}</button>
                {{/ btn-cancel }}
                {{# btn-save }}
                  <button type="button" class="btn btn-dark ml-5" aria-label="save">{{ btn-save }}</button>
                {{/ btn-save }}
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="modal-body pt-0 pb-8">
        <div class="container pb-8">
          <form class="w-100 needs-validation" novalidate>
            {{# sections }}
              <div class="row py-6 py-md-8">
                <div class="col-md-4 offset-md-1">
                  <h2 class="secondary-6">{{ heading }}</h2>
                </div>
                <div class="col-md-5">

                <div class="form-row w-100">
                    <div class="form-group col-md-8 mb-3">
                      <label for="validationCustom01" class="primary-2">First name</label>
                      <input type="text" class="form-control" id="validationCustom01" placeholder="First name" value="Mark" required>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label for="validationCustom02" class="primary-2">Last name</label>
                      <input type="text" class="form-control" id="validationCustom02" placeholder="Last name" value="Otto" required>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label for="validationCustomUsername" class="primary-2">Username</label>
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="inputGroupPrepend">@</span>
                        </div>
                        <input type="text" class="form-control" id="validationCustomUsername" placeholder="Username" aria-describedby="inputGroupPrepend" required>
                        <div class="invalid-feedback">
                          Please choose a username.
                        </div>
                      </div>
                    </div>
                  </div>






                  <!-- A field group -->
                  <div class="field-group mt-5 mt-md-0">
                    <p class="label primary-2 mb-0">Customer Name</p>
                    <input type="text w-100">
                  </div>
                  <div class="field-group mt-5">
                    <p class="label mb-1">Company</p>
                    <input type="text w-100">
                  </div>
                  <div class="field-group mt-5">
                    <p class="label mb-1">{{ fields.email }}</p>
                    <p>{{ customer.email }}</p>
                  </div>
                  <div class="field-group mt-5">
                    <p class="label mb-1">{{ fields.phone }}</p>
                    <p class="mb-0">{{ customer.phone }}</p>
                  </div>

                </div>
              </div>
              <!-- I Rule -->
              <div class="row mt-8">
                <div class="col-md-10 offset-md-1"><div class="w-100 rule">&nbsp;</div></div>
              </div>
            {{/ sections }}
            {{# btn-save }}
              <div class="row mt-8">
                <div class="col-md-10 offset-md-1 d-flex">
                  <div class="ml-auto">
                  <button type="submit" class="btn ml-5" aria-label="save">{{ btn-save }}</button>
                </div>
                </div>
              </div>
            {{/ btn-save }}
          </form>

        </div>
      </div>

    </div>
  </div>
</div>



