
<div class="row customer-profile">
  <div class="col-md-10 offset-md-1">
    <a href="#" class="edit secondary-4 small bold" data-toggle="modal" data-target="#exampleModalLong" data-backdrop="false"><span class="d-inline-block icon-pencil"></span>&nbsp;Edit</a>
    <h2 class="secondary-6 mt-8">{{ customer.heading }}</h2>
    <div class="field-group mt-5">
      <p class="label mb-1">{{ fields.name }}</p>
      <p>{{ customer.firstName }}&nbsp;{{ customer.lastName }}</p>
    </div>
    <div class="field-group mt-5">
      <p class="label mb-1">{{ fields.company }}</p>
      <p>{{ customer.company }}</p>
    </div>
    <div class="field-group mt-5">
      <p class="label mb-1">{{ fields.email }}</p>
      <p>{{ customer.email }}</p>
    </div>
    <div class="field-group mt-5">
      <p class="label mb-1">{{ fields.phone }}</p>
      <p class="mb-0">{{ customer.phone }}</p>
    </div>
  </div>
</div>
