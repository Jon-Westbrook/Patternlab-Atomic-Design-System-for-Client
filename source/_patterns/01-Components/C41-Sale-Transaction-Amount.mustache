<div class="form-row">
  <div class="form-group col-md-6 mb-5">
    <label for="validationCustom05" class="primary-2">Amount Owed</label>
    <div class="dollar-wrapper">
      <input type="text" class="form-control" id="validationCustom05" required>
    </div>
    <div class="invalid-feedback">
      Please provide a valid amount.
    </div>
  </div>
  <div class="form-group col-md-12 mb-5">
    <label for="validationCustom01" class="primary-2">Amount</label>
    <input type="text" class="form-control" id="validationCustom01" aria-describedby="validationCustom01" required
      value="{{ pre-pop-name }}">
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>
</div>

<div class="row pb-6">
  <div class="col-md-8">
    <div class="row mx-0 px-0">
      <div class="col-4 d-flex align-items-center">
        <p class="label my-3">Subtotal</p>
      </div>
      <div class="col-6 d-flex align-items-center">
        <p class="gray my-3">$00.00</p>
      </div>
    </div>
    <div class="row mx-0 px-0">
      <div class="col-4 d-flex align-items-center">
        <p class="label my-3">Credit Card Fee (3.5%)</p>
      </div>
      <div class="col-6 d-flex align-items-center">
        <p class="gray my-3">$00.00</p>
      </div>
    </div>
    <div class="row mx-0 px-0">
      <div class="col-4 d-flex align-items-center">
        <p class="label my-3">Total</p>
      </div>
      <div class="col-6 d-flex align-items-center">
        <p class="gray my-3">$00.00</p>
      </div>
    </div>
  </div>
</div>
