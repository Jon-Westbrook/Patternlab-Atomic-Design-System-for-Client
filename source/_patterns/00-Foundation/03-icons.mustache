<div class="bg-gray-lightest">
  <div class="container pb-5 pt-5 pt-md-7">
    <div class="row">
      <div class="col">

        <h1 class="display2 mt-5">Icons</h1>

      </div>
    </div>
  </div>
</div>

<div class="container pt-8">

	{{#icons}}

	<div class="row pb-4">
		<div class="col-12">
			<h2 class="display2">{{ category }}<h2>
		</div>
	</div>

	<div class="row bg-{{ background }} pb-8">

		{{#icons }}
		<div class="col-3">
			<div class="icon-{{ . }}" style="height: 3rem; width: 3rem;"></div>
			<p class="{{ text }}">{{ . }}</p>
		</div>
		{{/icons}}
	</div>

	<div class="rule thin-gray mb-8"></div>
	
	{{/icons}}

</div>