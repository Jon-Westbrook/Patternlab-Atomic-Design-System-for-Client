<div class="container chat-launch mt-8">
  <div class="row">
    <div class="col-md-12 d-flex flex-column flex-md-row justify-content-center align-items-center">
      <div class="mx-md-3"><img src="{{ chat.bubble }}"></div>
      <div class="display3 medium primary-2 text-center mt-4 mt-md-0 mx-md-1 mx-lg-3 mx-xl-4">{{ chat.title }}</div>
      <div class="label primary-2 mt-4 mt-md-0 mx-md-1 mx-lg-3 mx-xl-4 text-center">{{ chat.wait-copy }}&nbsp;{{ chat.wait-time }}</div>
      <button class="btn btn-info mt-5 mt-md-0 mx-md-1 mx-lg-3 mx-xl-4">Start Chat</button>
    </div>
  </div>
</div>
